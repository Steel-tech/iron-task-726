# Production Environment Variables for API

# Database (Supabase)
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres"

# Supabase
SUPABASE_URL="https://YOUR_PROJECT.supabase.co"
SUPABASE_ANON_KEY="YOUR_ANON_KEY"
SUPABASE_SERVICE_ROLE_KEY="YOUR_SERVICE_ROLE_KEY"

# JWT (Generate with: openssl rand -base64 32)
JWT_SECRET="YOUR_STRONG_JWT_SECRET"
COOKIE_SECRET="YOUR_STRONG_COOKIE_SECRET"

# CORS
CORS_ORIGIN="https://your-frontend-domain.vercel.app"

# Port (Vercel will set this)
PORT=3001

# Redis (Use Upstash Redis for production)
REDIS_URL="redis://default:YOUR_PASSWORD@YOUR_REDIS_HOST:6379"

# AWS S3 (Temporary - will migrate to Supabase Storage)
AWS_ACCESS_KEY_ID="YOUR_KEY"
AWS_SECRET_ACCESS_KEY="YOUR_SECRET"
AWS_BUCKET_NAME="fsw-iron-task-prod"
AWS_REGION="us-west-2"