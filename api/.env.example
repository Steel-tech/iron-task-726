# Database (Supabase) - Using pooled connection for better reliability
DATABASE_URL="postgresql://username:password@host:6543/database?pgbouncer=true"

# Supabase
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# JWT
JWT_SECRET="generate-a-secure-64-character-secret"

# Redis (optional for development)
REDIS_URL=redis://localhost:6379

# Port
PORT=3001

# Security
COOKIE_SECRET="generate-another-secure-64-character-secret"

# AWS S3 (optional - for legacy storage)
# S3_ENDPOINT=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_BUCKET_NAME=
# AWS_REGION=us-east-1

# Server Configuration
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000

# Environment
NODE_ENV=development

# Push Notifications (Web Push VAPID)
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=mailto:admin@example.com

# Email Configuration
EMAIL_PROVIDER=smtp # Options: smtp, sendgrid
EMAIL_FROM="FSW Iron Task <noreply@fswirontask.com>"

# SMTP Configuration (if using smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid Configuration (if using sendgrid)
# SENDGRID_API_KEY=your-sendgrid-api-key

# App URL (for email links)
APP_URL=http://localhost:3000