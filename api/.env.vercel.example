# Vercel Environment Variables Template
# Copy these to your Vercel dashboard Environment Variables section

# Database - Use Supabase connection pooling for serverless
DATABASE_URL="postgresql://postgres.[ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"

# Supabase Configuration (Required)
SUPABASE_URL="https://[project-ref].supabase.co" 
SUPABASE_SERVICE_ROLE_KEY="eyJ[your-service-role-key]"
SUPABASE_ANON_KEY="eyJ[your-anon-key]"

# Security Secrets (Required - Generate 32+ character random strings)
JWT_SECRET="your-super-secure-jwt-secret-min-32-characters"
COOKIE_SECRET="your-super-secure-cookie-secret-min-32-characters"

# Server Configuration
NODE_ENV="production"
PORT="3001"
HOST="0.0.0.0"

# CORS Configuration - Set to your frontend domain
CORS_ORIGIN="https://your-frontend.vercel.app,https://your-custom-domain.com"

# Default Company Configuration
DEFAULT_COMPANY_ID="fsw-default-company"

# Demo User Credentials (Optional - for testing)
DEMO_USER_EMAIL="demo@fsw.local"
DEMO_USER_NAME="Demo User"
DEMO_USER_PASSWORD="SecureDemoPass123!"

# File Storage (Optional - for media uploads)
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_BUCKET_NAME="your-bucket-name"
AWS_REGION="us-east-1"
S3_ENDPOINT="https://your-s3-endpoint.com"

# Redis Cache (Optional - for session storage)
REDIS_URL="redis://your-redis-host:6379"

# Development Testing (Development environments only)
DEBUG_TEST_EMAIL="dev@localhost.local"
DEBUG_TEST_PASSWORD="DevPassword123!"